header.header   
  .header__contents
    nav.nav.nav-tours
      a.nav__el(href="/") Gamurel
    .header__logo
      form.form--search
        //- .form__group.ma-bt-md
        input#name-search-header.form__input(type='text', placeholder='name of game', required, minlength='1')
        //- .form__group
        button.btn#search-game 

    nav.nav.nav--user 
      if user
        a.nav__el.nav__el--logout Log out
        a.nav__el(href=`/user/${user.username}`)
          img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.username}`)
          span= `${user.username}`
      else
        a.nav__el(href='/login') Log in
        a.nav__el.nav__el--cta(href='/signup') Sign up
