extends ../base


block content
  main.main
    h2 Add your Review Here
    form.form--review
      .form__group
        label.form__label(for='review') Review
        input#review.form__input(type='text' value=relationship.review)
      .form__group.ma-bt-md
        label.form__label(for='rating') Rating
        input#rating.form__input(type="number", value = relationship.rating min=1, max=5)
      .form__group
        button.btn.btn--green Update
      input#relationshipId.form__input(type='hidden' value=relationship.id)
      input#gameId.form__input(type='hidden' value=relationship.game)
