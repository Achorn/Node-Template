extends ../base 


mixin activityCard(activity)
  hr
  div.activity-container
    h1
      a(href=`/user/${activity.user.username}`)= `${activity.user.username}`
    div.activity-card-game-container
      img.activity-card-image(src=`${activity.gameInfo.image.small_url}`, alt="")
      div
        h3 
          a(href=`/game/${activity.game}`)= `${activity.gameInfo.name}`
        h4= `${activity.experience}`
        if activity.rating 
          h4= `rating: ${activity.rating}`
        if activity.review 
          h4= `review: ${activity.review}`

block content 
  if !user
    main.main 
      h1 Gamurel is a place to keep track of your games and see what your friends are playing 
      h2 This home page will soon show a list of your friends recent activity
      h2 to start, use the search bar above to look for games
      h2 this website is phone screen hesitant and not really made to be doom scrolled
  else
    h2 Recent Activity 
    each act in activity 
      +activityCard(act)


